---
import Base from "../layouts/Base.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Link from "../components/Link.astro";

const experience = [
  {
    company: "Huawei",
    role: "Tensor Compiler Engineering Intern",
    period: "May 2025 - August 2025",
    location: "Edmonton, AB",
    description: "Designed scheduling algorithms to efficiently lower tiled \
                  computation graphs to a custom matrix accelerator. Helped  \
                  design a compile time execution model over which \
                  heruistic search could be implemented."
  },
];
---

<Base
  title="About Justin Meimar"
  description="About Justin Meimar"
>
  <div class="max-w-2xl mx-auto px-6 py-12 md:py-20">
    <Header activeSection="about" />

    <section class="mb-12 animate-fade-up stagger-1">
      <p class="font-serif text-lg md:text-xl leading-relaxed font-light">
          I first got into programming in 2020 trying to build an automatic stock
          trader. The concept of an API was unbenknownst to me, so I scraped yahoo finance with
          a cron job. Maybe my implementation style was a little higher variance
          before the normalization force of LLMs...
          <br>
          <br>
          Since then, compilers and systems programming have become my primary
          interest. I am fortunate to study as a graduate student underneath
          <Link href="https://webdocs.cs.ualberta.ca/~amaral/">Nelson Amaral</Link>
          at the University of Alberta. My time is spent reading,
          writing, and hacking on Mozilla's SpiderMonkey engine.
          <br>
          <br>
          Outside of computers I enjoy reading science fiction, some of my favourites
          are the works of
          <Link href="https://en.wikipedia.org/wiki/Philip_K._Dick_bibliography">PKD</Link>
          , the
          <Link href="https://en.wikipedia.org/wiki/Hyperion_(Simmons_novel)">Hyperion Series</Link>,
          and Greg Egan's
          <Link href="https://www.gregegan.net/PERMUTATION/Permutation.html">Permutation City.</Link>
      </p>
    </section>

    <!-- Divider -->
    <div class="mb-16 h-px bg-[var(--border)] animate-fade-in stagger-2"></div>

    <article class="animate-fade-up stagger-3">
      <!-- Experience -->
      <section>
        <h2
          class="font-mono text-xs tracking-widest uppercase text-[var(--text-muted)] mb-8"
        >
          Experience
        </h2>

        <div class="space-y-8">
          {
            experience.map((job, i) => (
              <div
                class:list={[
                  "border-l-2 border-[var(--border)] pl-6 animate-fade-up",
                  `stagger-${Math.min(i + 3, 6)}`,
                ]}
              >
                <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1 mb-2">
                  <h3 class="font-serif text-lg">
                    {job.company}{" "}
                    <span class="text-[var(--text-muted)]">/ {job.role}</span>
                  </h3>
                  <span class="font-mono text-xs text-[var(--text-faint)]">
                    {job.period}
                  </span>
                </div>
                <p class="font-mono text-xs text-[var(--text-muted)] mb-3">
                  {job.location}
                </p>
                <p class="font-serif text-sm text-stone-500 leading-relaxed">
                  {job.description}
                </p>
              </div>
            ))
          }
        </div>
      </section>

      <!-- Awards -->
      <!-- <section class="mt-16"> -->
        <!-- <h2 -->
          <!-- class="font-mono text-xs tracking-widest uppercase text-[var(--text-muted)] mb-8" -->
        <!-- > -->
          <!-- Awards -->
        <!-- </h2> -->

        <!-- <div class="space-y-6"> -->
          <!-- Add your awards here following this format:
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between gap-1">
            <div>
              <span class="font-serif text-lg">Award Name</span>
              <p class="font-serif text-sm text-stone-500 mt-1">
                Description of the award
              </p>
            </div>
            <span class="font-mono text-xs text-[var(--text-faint)]">Date</span>
          </div>
          -->
        <!-- </div> -->
      <!-- </section> -->

      <!-- Publications -->
      <section class="mt-16">
        <h2
          class="font-mono text-xs tracking-widest uppercase text-[var(--text-muted)] mb-8"
        >
          Publications
        </h2>

        <div class="space-y-6">
          Coming Soon...  
          <!-- Add your publications here following this format:
          <div>
            <a href="link" target="_blank" rel="noopener" class="font-serif text-lg link-underline">
              Publication Title
            </a>
            <p class="font-serif text-sm text-stone-500 mt-1">
              Description of the publication
            </p>
            <span class="font-mono text-xs text-[var(--text-faint)]">Venue/Journal</span>
          </div>
          -->
        </div>
      </section>

      <!-- Stack -->
      <section class="mt-16">
        <h2
          class="font-mono text-xs tracking-widest uppercase text-[var(--text-muted)] mb-6"
        >
          Stack
        </h2>

        <div class="grid gap-4 font-mono text-sm">
          <div>
            <span class="text-[var(--text-muted)]">Systems Programming</span>
            <span class="text-[var(--text-faint)]"> / </span>
            <span>C, C++, Rust, OCaml</span>
          </div>
          <div>
            <span class="text-[var(--text-muted)]">Web Development</span>
            <span class="text-[var(--text-faint)]"> / </span>
            <span>Svelte, Django, Ruby on Rails</span>
          </div>
          <div>
            <span class="text-[var(--text-muted)]">Environment</span>
            <span class="text-[var(--text-faint)]"> / </span>
            <span>NixOS, zsh, alacritty, neovim, tmux</span>
          </div>
        </div>
      </section>

      <!-- Elsewhere -->
      <section class="mt-16 pt-8 border-t border-[var(--border)]">
        <h2
          class="font-mono text-xs tracking-widest uppercase text-[var(--text-muted)] mb-4"
        >
          Elsewhere
        </h2>
        <ul class="space-y-2 font-mono text-sm">
          <li>
            <Link href="/resume.pdf">
              Resume (PDF)
            </Link>
          </li>
          <li>
            <Link href="https://github.com/JustinMeimar">
              GitHub
            </Link>
          </li>
          <li>
            <Link href="mailto:meimar@ualberta.ca" external={false}>
              Email
            </Link>
          </li>
        </ul>
      </section>
    </article>

    <div class="mt-20">
      <Footer />
    </div>
  </div>
</Base>
