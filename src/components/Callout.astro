---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="my-8 border-l-2 border-[var(--border)] bg-[var(--bg-paper)] px-6 py-4">
  <h4 class="font-mono text-xs tracking-widest uppercase text-[var(--text-muted)] mb-2">
    {title}
  </h4>
  <div class="font-serif text-sm text-[var(--text-muted)]">
    <slot />
  </div>
</div>
